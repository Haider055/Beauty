<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.fashionpage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:text="Wow skin care oil"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/videoSlider"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="1"
            android:layout_marginBottom="8dp"
            app:sliderStartAutoCycle="true">
        </com.smarteist.autoimageslider.SliderView>
    </androidx.cardview.widget.CardView>

        <TextView
            android:text="Build your look with this"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_weight="1"
                android:id="@+id/buildlookrecycler"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">

    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/fashion_trendoftheday"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/videorecycler"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:text="New season style"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:textSize="20dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:text="View all"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="12dp"
        android:textSize="14dp"
        android:textAlignment="viewEnd"
        android:layout_weight="1"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/newseasonimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ImageView>
    </androidx.cardview.widget.CardView>

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textSize="22dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:text="POST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="View all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linear"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:layout_margin="6dp"
                        android:layout_weight="0.7"
                        android:scaleType="fitXY"
                        android:src="@drawable/fashion_trendoftheday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ImageView>

                    <LinearLayout
                        android:layout_weight="1.3"
                        android:weightSum="3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/fashion_trendoftheday"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </ImageView>

                        <ImageView
                            android:src="@drawable/fashion_trendoftheday"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </ImageView>

                        <ImageView
                            android:src="@drawable/fashion_trendoftheday"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </ImageView>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_below="@id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_width="40dp"
                        app:civ_border_color="#000000"
                        app:civ_border_width="1dp"
                        android:id="@+id/image"
                        android:src="@drawable/sale50infashion"
                        android:layout_height="40dp">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:text="Haider ali"
                        android:layout_marginTop="4dp"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:id="@+id/name"
                        android:layout_toRightOf="@id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:text="15k shigvani"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_below="@id/name"
                        android:id="@+id/follow"
                        android:layout_toRightOf="@id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <LinearLayout
                        android:id="@+id/share"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/ic_baseline_favorite_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </com.google.android.material.floatingactionbutton.FloatingActionButton>

                        <TextView
                            android:text="Share"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_toStartOf="@id/share"
                        android:id="@+id/view"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton

                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/ic_baseline_favorite_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </com.google.android.material.floatingactionbutton.FloatingActionButton>

                        <TextView
                            android:text="View"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_toStartOf="@id/view"
                        android:id="@+id/like"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="4dp"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_baseline_favorite_24"
                            android:layout_height="wrap_content">

                        </com.google.android.material.floatingactionbutton.FloatingActionButton>

                        <TextView
                            android:text="Like"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_below="@id/relative"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Products"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="16dp"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:text="Used"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_marginLeft="16dp"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_margin="4dp"
                        android:layout_below="@id/relative"
                        android:id="@+id/postproductsrecycler"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclertopbrand"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:text="Top brand for best style"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="160dp">

        <ImageView
            android:src="@drawable/sale50infashion"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="160dp">
        </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="Youtube blog"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            app:videoId="S0Q4gqBUs7c"
            app:autoPlay="false"
            app:showFullScreenButton="false" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>