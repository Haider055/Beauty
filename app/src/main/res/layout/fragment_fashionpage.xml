<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.fashionpage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:text="Wow skin care oil"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/videoSlider"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="1"
            android:layout_marginBottom="8dp"
            app:sliderStartAutoCycle="true">
        </com.smarteist.autoimageslider.SliderView>
    </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/buildlookrecycler"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>


    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">

    <ImageView
        android:src="@drawable/fashion_trendoftheday"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/videorecycler"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:text="New season style"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:textSize="20dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:text="View all"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="12dp"
        android:textSize="14dp"
        android:textAlignment="viewEnd"
        android:layout_weight="1"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/newseasonimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ImageView>
    </androidx.cardview.widget.CardView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclertopbrand"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:text="Top brand for best style"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="160dp">

        <ImageView
            android:src="@drawable/sale50infashion"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="160dp">
        </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="Youtube blog"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            app:videoId="S0Q4gqBUs7c"
            app:autoPlay="false"
            app:showFullScreenButton="false" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>